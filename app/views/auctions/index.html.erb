<h1>Список доставок</h1>

<table>
  <tr>
    <th>Доставка</th>
    <th>Откуда</th>
    <th>Куда</th>
    <th>Ставки</th>
    <th>Расстояние</th>
    <th>Дата</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @auctions.each do |auction| %>
  <tr>
    <td><%= auction.item %></td>
    <td><%= auction.origin %></td>
    <td><%= auction.destination %></td>
    <td><%= auction.bids %></td>
    <td><%= auction.mileage %></td>
    <td><%= auction.date %></td>
    <td><%= link_to 'Показать', auction %></td>
    <td><%= link_to 'Редактировать', edit_auction_path(auction) %></td>
    <td><%= link_to 'Удалить', auction, :confirm => 'А ю шурман?', :method => :delete %></td>
  </tr>
<% end %>
</table>

